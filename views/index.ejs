<%- include("./partials/header")%>

<div class="container">
  <div class="jumbotron text-center">
    <h1>Scrapin' Reddit</h1>
    <a class="btn btn-primary" href="/articles">See All Articles</a>
  </div>

  <div class="row">
    <div class="col-12 text-center mb-5">
      <div>
        <h2>Top Posts:</h2>
      </div>
      <h3 id="title"><%=article.title%></h3>
      <a id="link" href="<%=article.link%>">See More</a>
      <p id="date"> <%=article.date.toDateString()%></p>

      <div>
        <button class="btn btn-primary btn-lg" id="prev" class="mr-5 shadow-none">Prev</button>
        <button class="btn btn-primary btn-lg" id="next">Next</button>
      </div>
    </div>

    <div class="col-6">
      <div>
        <h2>Comments:</h2>
      </div>
      <div id="comments">
        <ul>
          <% article.comments.forEach(comment => { %>
          <li> <%=comment.comment%> </li>
          <% }) %>

        </ul>

      </div>

      <button class="btn btn-danger btn-lg" id="deleteCommentsButton">Delete</button>
    </div>

    <div class="col-6">
      <div>
        <h2>Add a comment:</h2>
      </div>

      <input type="text" class="form-control" id="newComment">
      <button class="btn btn-primary btn-lg" type="submit" id="addCommentButton">Add</button>
    </div>


  </div>



</div>



<%- include("./partials/footer") %>